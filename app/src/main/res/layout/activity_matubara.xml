<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4EED0"
    tools:context=".Matubara">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/higasiyamaButton"
        android:layout_width="92dp"
        android:layout_height="48dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/matubaraback"
        android:fontFamily="casual"
        android:text="東山:ひがしやま"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/yakaButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/kibaButton"
        android:layout_width="92dp"
        android:layout_height="48dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/matubaraback"
        android:fontFamily="casual"
        android:text="木場:きば"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/matubaraButton1"
        app:layout_constraintStart_toEndOf="@+id/higasiyamaButton"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/matubaraButton1"
        android:layout_width="92dp"
        android:layout_height="48dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/matubaraback"
        android:fontFamily="casual"
        android:text="松原:まつばら"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/yakaButton"
        android:layout_width="92dp"
        android:layout_height="48dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/matubaraback"
        android:fontFamily="casual"
        android:text="八家:やか"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/higasiyamaButton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/megaButton"
        android:layout_width="92dp"
        android:layout_height="48dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/matubaraback"
        android:fontFamily="casual"
        android:text="妻鹿:めが"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/usazakiButton"
        app:layout_constraintStart_toEndOf="@+id/yakaButton"
        app:layout_constraintTop_toBottomOf="@+id/kibaButton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/usazakiButton"
        android:layout_width="92dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/matubaraback"
        android:fontFamily="casual"
        android:text="宇佐崎:うさざき"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/matubaraButton1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nakamuraButton"
        android:layout_width="92dp"
        android:layout_height="48dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/matubaraback"
        android:fontFamily="casual"
        android:text="中村:なかむら"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yakaButton" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="61dp"
        android:fontFamily="serif"
        android:text="屋台蔵の場所を確認する"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/kibaButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="serif"
        android:text="見所"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/megaButton" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="370dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/matubaraMidokoro1Button"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/rootbutton"
                android:fontFamily="serif"
                android:text="見所1：場所を確認"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView18" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="20dp"
                android:fontFamily="serif"
                android:text="10月14日・15日とも桟敷前で練り合わせ"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/matubaraMidokoro1Button" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/matubaraMidokoro2Button"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rootbutton"
                android:fontFamily="serif"
                android:text="見所2:場所を確認"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView19" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginBottom="120dp"
                android:fontFamily="serif"
                android:text="10月15日御旅山での練り合わせ"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/matubaraMidokoro2Button"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="114dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usazakiButton"
        app:srcCompat="@drawable/maturi9" />

</androidx.constraintlayout.widget.ConstraintLayout>